    <Set name="contextPath">/fcrepo</Set>
    <Set name="war"><SystemProperty name="jetty.home" default="."/>/webapps/fcrepo</Set>
    <Get name="securityHandler">
        <Set name="authenticator">
            <New class="edu.jhu.library.jetty.security.ShibbolethHeaderAuthenticator">
                <Set name="headerName"><Property name="jhuda.shib.authheader" default="On-Behalf-Of"/></Set>
                <Set name="defaultRoles"><Property name="jhuda.shib.roles" default="fedoraUser"/></Set>
            </New>
        </Set>
    </Get>
</Configure>